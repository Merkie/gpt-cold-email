generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  name       String
  password   String
  created_at DateTime     @default(now())
  updated_at DateTime     @updatedAt
  businesses businesses[]
  employees  employees[]
}

model businesses {
  id         Int         @id @default(autoincrement())
  user       users       @relation(fields: [user_id], references: [id])
  user_id    Int
  title      String
  link       String
  address    String
  phone      String
  map_id     String
  raw        String
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt
  employees  employees[]
}

model employees {
  id           Int        @id @default(autoincrement())
  user         users      @relation(fields: [user_id], references: [id])
  user_id      Int
  business     businesses @relation(fields: [business_id], references: [id])
  business_id  Int
  name         String
  roles        String[]
  emails       String[]
  linkedin_url String
  raw          String
  created_at   DateTime   @default(now())
  updated_at   DateTime   @updatedAt
}
